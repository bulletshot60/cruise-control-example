package AdaptiveCruiseControlPlatooningSensorRegulator
public
	with Base_Types, AbstractAdaptiveCruiseControlRegulator;
	
	system adaptive_cruise_control_platooning_sensor extends AbstractAdaptiveCruiseControlRegulator::abstract_adaptive_cruise_control_regulator
	end adaptive_cruise_control_platooning_sensor;
	
	system implementation adaptive_cruise_control_platooning_sensor.impl extends AbstractAdaptiveCruiseControlRegulator::abstract_adaptive_cruise_control_regulator.impl
		subcomponents
			platooning_sensor: device platooning_sensor.impl;
			decision_engine: system decision_engine.impl;
		connections
			platooning_sensor_to_decision_engine: port platooning_sensor.avg_speed -> decision_engine.avg_speed;
			current_speed_to_decision_engine: port current_speed -> decision_engine.current_speed;
			decision_engine_to_decision_system_increase: port decision_engine.increase_speed -> decision_system.increase_speed_in;
			decision_engine_to_decision_system_decrease: port decision_engine.decrease_speed -> decision_system.decrease_speed_in;
	end adaptive_cruise_control_platooning_sensor.impl;
	
	----------------------------------------------------------------------------
	
	system decision_engine
		features
			avg_speed: in data port Base_Types::Integer;
			current_speed: in data port Base_Types::Integer;
			increase_speed: out event data port Base_Types::Boolean;
			decrease_speed: out event data port Base_Types::Boolean;
	end decision_engine;
	
	system implementation decision_engine.impl
	end decision_engine.impl;
	
	----------------------------------------------------------------------------
	
	device platooning_sensor
		features
			avg_speed: out data port Base_Types::Integer;
	end platooning_sensor;
	
	device implementation platooning_sensor.impl
	end platooning_sensor.impl;
	
end AdaptiveCruiseControlPlatooningSensorRegulator;
